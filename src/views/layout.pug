doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
        // use bootstrap via CDN
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
        link(rel='stylesheet' href='/css/index.css')
        title MHoC Stock Market
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            a(href='#').navbar-brand MHoC Stock Market
            button(type='button' data-toggle='collapse' data-target='#navbarSupportedContent').navbar-toggler
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item
                        a(href='/').nav-link Home
                    li.nav-item
                        a(href='/companies').nav-link Companies
                    if user
                        li.nav-item.dropdown
                            a(href='#' role='button' data-toggle='dropdown')#tradesDropdownLink.nav-link.dropdown-toggle My Trades
                            .dropdown-menu
                                a(href='/me/trades/buy').dropdown-item Buy Orders
                                a(href='/me/trades/sell').dropdown-item Sell Orders
                                .dropdown-divider
                                a(href='/me/transactions').dropdown-item Completed Transactions
                        li.nav-item
                            a(href='/me/portfolio') My Portfolio
                        li.nav-item
                            a(href='/me/profile') Profile
            if user
                a(href='/auth/logout').btn Logout
            else
                a(href='/auth/login').btn Login
        block content
        // required scripts for bootstrap
        script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js' integrity='sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js' integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo' crossorigin='anonymous')
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js' integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6' crossorigin='anonymous')